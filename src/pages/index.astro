    </div>
  </section>
  
  <!-- Лицензия (с триггером для модального окна) -->
  <section class="py-16 bg-neutral-50">
    <div class="container mx-auto px-4 max-w-6xl">
      <div class="grid md:grid-cols-2 gap-8">
        <!-- Лицензия -->
        <div 
          class="bg-white rounded-lg p-8 shadow-lg hover:shadow-xl transition-all cursor-pointer flex flex-col h-full" 
